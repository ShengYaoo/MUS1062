@model IEnumerable<YC.Models.OpenData>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.資料集名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.服務分類)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@item.下載連結">
                @Html.DisplayFor(modelItem => item.資料集名稱)
            </a>
            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.服務分類)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
